<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:padding="16dp"
  >

  <androidx.recyclerview.widget.RecyclerView
    android:id="@+id/recyclerView"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:orientation="vertical"
    android:paddingBottom="8dp"
    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
    app:layout_constraintBottom_toTopOf="@+id/lv_media_list"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    />

  <ListView
    android:id="@+id/lv_media_list"
    android:layout_width="0dp"
    android:layout_height="200dp"
    android:scrollbars="none"
    android:choiceMode="singleChoice"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintBottom_toTopOf="@+id/btn_scan_audio"
    tools:listitem="@android:layout/simple_list_item_checked"
    />

  <Button
    android:id="@+id/btn_scan_audio"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintBottom_toTopOf="@+id/rg_codec_options"
    android:text="重新扫描文件"
    />

  <RadioGroup
    android:id="@+id/rg_codec_options"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    android:visibility="gone"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintBottom_toTopOf="@+id/rg_audio_format"
    tools:visibility="visible"
    >

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="编解码选项："
      android:textColor="@android:color/black"
      android:textStyle="bold"
      android:textSize="14sp"
      />

    <RadioButton
      android:id="@+id/rb_ffmpeg"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:text="软件"
      />

    <RadioButton
      android:id="@+id/rb_media_codec"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:text="硬件"
      />

    <CheckBox
      android:id="@+id/cb_async"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:text="异步"
      android:visibility="gone"
      tools:visibility="visible"
      />
  </RadioGroup>

  <RadioGroup
    android:id="@+id/rg_audio_format"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintBottom_toTopOf="@+id/btn_start_record"
    >

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="格式："
      android:textColor="@android:color/black"
      android:textStyle="bold"
      android:textSize="14sp"
      />

    <RadioButton
      android:id="@+id/rb_pcm"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:text="PCM"
      />

    <RadioButton
      android:id="@+id/rb_wav"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:text="WAV"
      />

    <RadioButton
      android:id="@+id/rb_aac"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:text="AAC"
      />
  </RadioGroup>

  <TextView
    android:id="@+id/tv_recorded_duration"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingStart="8dp"
    android:textColor="@android:color/holo_red_light"
    android:textStyle="bold"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toTopOf="@+id/btn_start_play"
    app:layout_constraintBottom_toBottomOf="parent"
    tools:text="@string/text_recorded_duration"
    />

  <Button
    android:id="@+id/btn_start_record"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="长按录制"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toLeftOf="@+id/btn_start_play"
    app:layout_constraintBottom_toBottomOf="parent"
    />

  <Button
    android:id="@+id/btn_start_play"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="播放"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    />
</androidx.constraintlayout.widget.ConstraintLayout>