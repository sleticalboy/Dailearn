<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/btn_stop"
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:text="Stop !"
        android:textAppearance="?android:textAppearanceMedium"
        android:textSize="28sp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp">

        <ImageView
            android:id="@+id/iv_anim_low_bg"
            android:layout_width="303px"
            android:layout_height="332px"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/mx_safebox_anim_low_bg"/>

        <ImageView
            android:id="@+id/iv_anim_high_bg"
            android:layout_width="303px"
            android:layout_height="332px"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:scaleType="matrix"
            android:src="@mipmap/mx_safebox_anim_high_bg"
            android:visibility="visible"/>
        <ImageView
            android:id="@+id/iv_anim_scanner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="332px"
            android:src="@mipmap/mx_safebox_anim_scanner"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/btn_start"
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize"
        android:layout_marginTop="50dp"
        android:background="@color/colorPrimaryDark"
        android:gravity="center"
        android:text="Start !"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="@android:color/white"
        android:textSize="28sp"/>
</LinearLayout>
